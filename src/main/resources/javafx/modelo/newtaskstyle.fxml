<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="task-block" prefHeight="225.0" prefWidth="275.0" spacing="10.0" stylesheets="@newstyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.modelo.Newtaskstyle">
   <padding>
      <Insets left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="25.0" spacing="100.0">
         <children>
            <Label id="label-status" prefHeight="17.0" prefWidth="60.0" stylesheets="@newstyle.css" text="Status" />
            <Button id="bt-priority-task" mnemonicParsing="false" prefWidth="100.0" stylesheets="@newstyle.css">
               <graphic>
                  <Label id="label-priority" prefHeight="17.0" prefWidth="101.0" stylesheets="@newstyle.css" text="Priority" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="50.0">
         <children>
            <TextField id="txtfield-title-task" prefHeight="50.0" prefWidth="255.0" stylesheets="@newstyle.css" text="Title" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="15.0" spacing="100.0">
         <children>
            <Button id="bt-type-task" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" stylesheets="@newstyle.css">
               <graphic>
                  <Label id="label-type-task" prefHeight="17.0" prefWidth="50.0" stylesheets="@newstyle.css" text="Type" />
               </graphic>
            </Button>
            <Button id="bt-project-task" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" stylesheets="@newstyle.css">
               <graphic>
                  <Label id="label-project-task" stylesheets="@newstyle.css" text="Project" underline="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="90.0" prefHeight="15.0" spacing="100.0" stylesheets="@newstyle.css">
         <children>
            <Button id="bt-pstart-task" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" stylesheets="@newstyle.css">
               <graphic>
                  <Label id="label-pstart-task" stylesheets="@newstyle.css" text="PStart" />
               </graphic>
            </Button>
            <Button id="bt-pfinish-task" mnemonicParsing="false" prefWidth="60.0" stylesheets="@newstyle.css">
               <graphic>
                  <Label id="label-pfinish-task" stylesheets="@newstyle.css" text="PFinish" underline="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="255.0" spacing="5.0">
         <children>
            <Button id="bt-confirm-task" mnemonicParsing="false" prefHeight="45.0" prefWidth="60.0" stylesheets="@newstyle.css" text="Button" />
            <Button id="bt-addsubtask-task" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" stylesheets="@newstyle.css" text="Button" />
            <Button id="bt-edit-task" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" stylesheets="@newstyle.css" text="Button" />
            <Button id="bt-remove-task" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" stylesheets="@newstyle.css" text="Button" />
         </children>
      </HBox>
   </children>
</VBox>
